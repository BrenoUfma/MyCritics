@model MyCritics.Models.Filme

@{
    ViewData["Title"] = "Create";
}
<header class="cabecalho">
    <div class="logoNome">
        <a href="">
            <img src="~/images/abacate-removebg-preview.png" alt="some text" width=50 height=51>
        </a>

        <a class="cabecalho__botao-nav" asp-action="Login" asp-controller="Home">MY CRITICS</a>

    </div>
    
    <nav class="cabecalho__navegacao">
        <ul class="cabecalho__navegacao-botoes">
            <a class="cabecalho__botao-nav" asp-action="Indicacoes" asp-controller="Home">Ir para Lista de Filmes</a>
        </ul>

    </nav>

</header>
<h2 class="formulario__titulo">Adicionar Filmes</h2>

<hr />
<div class="row formulario__corpo">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" type="date" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
